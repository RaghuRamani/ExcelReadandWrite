    <Grid.RowDefinitions>
      <RowDefinition Height="272*" />
      <RowDefinition Height="71*" />
    </Grid.RowDefinitions>
    <TextBox HorizontalAlignment="Left"
             Margin="23,21,0,0"
             Background="AliceBlue"
             TextWrapping="Wrap"
             VerticalAlignment="Top"
             Width="834"
             Text="{Binding fileName}"
             Height="28" />
    <Button Content="Import"
            HorizontalAlignment="Left"
            FontSize="20"
            Background="AliceBlue"
            FontFamily="Times New Roman"
            FontWeight="ExtraBold"
            Margin="869,112,0,0"
            VerticalAlignment="Top"
            Height="39"
            Width="118"
            Command="{Binding ImportCommand}" />
    <Button Content="Add Record"
            HorizontalAlignment="Left"
            Margin="868,158,0,0"
            FontSize="20"
            Background="AliceBlue"
            Command="{Binding AddCommand}"
            FontFamily="Times New Roman"
            FontWeight="ExtraBold"
            VerticalAlignment="Top"
            Height="40"
            Width="120" />
    <Button Content="Browse"
            HorizontalAlignment="Left"
            Background="AliceBlue"
            Margin="867,66,0,0"
            FontSize="20"
            FontFamily="Times New Roman"
            FontWeight="ExtraBold"
            Command="{Binding ShowCommand}"
            VerticalAlignment="Top"
            Height="39"
            Width="120" />
    <DataGrid Background="Beige"
              Margin="30,62,145,41"
              Name="DataGrid"
              ItemsSource="{Binding dataTable.DefaultView}"
              AutoGenerateColumns="False"
              Grid.RowSpan="2">
      <DataGrid.Columns>

        <DataGridTextColumn Header="Employee No."
                            Binding="{Binding EmpNo}" />
        <DataGridTextColumn Header="Employee Name"
                            Binding="{Binding  EmpName}" />
        <DataGridTextColumn Header="Salary"
                            Binding="{Binding Salary}" />
        <DataGridTextColumn Header="Department Name"
                            Binding="{Binding DeptName}" />

      </DataGrid.Columns>
    </DataGrid>
    <Button Content="Export"
            HorizontalAlignment="Left"
            Margin="868,19,0,0"
            Background="AliceBlue"
            FontSize="20"
            Command="{Binding ExportCommand}"
            FontFamily="Times New Roman"
            FontWeight="ExtraBold"
            VerticalAlignment="Top"
            Height="39"
            Width="119" />


  </Grid>
